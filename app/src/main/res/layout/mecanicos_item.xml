<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        card_view:cardCornerRadius="4dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/ic_menu_send"
                android:id="@+id/mecanicoIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:id="@+id/titulo"
                android:text="Prueba de texto"
                android:layout_alignTop="@+id/mecanicoIcon"
                android:layout_toRightOf="@+id/mecanicoIcon"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="?android:attr/ratingBarStyleSmall"
                android:isIndicator="true"
                android:numStars="5"
                android:stepSize="1"
                android:id="@+id/ratingBar"
                android:progressTint="#f1c40f"
                android:layout_below="@+id/titulo"
                android:layout_toRightOf="@+id/mecanicoIcon"
                android:layout_toEndOf="@+id/mecanicoIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Distancia: 5 Km"
                android:id="@+id/textView4"
                android:layout_below="@+id/ratingBar"
                android:layout_toRightOf="@+id/mecanicoIcon"
                android:layout_toEndOf="@+id/mecanicoIcon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Abierto"
                android:id="@+id/textView5"
                android:layout_below="@+id/textView4"
                android:layout_toRightOf="@+id/mecanicoIcon"
                android:layout_toEndOf="@+id/mecanicoIcon" />
        </RelativeLayout>



    </android.support.v7.widget.CardView>




</RelativeLayout>