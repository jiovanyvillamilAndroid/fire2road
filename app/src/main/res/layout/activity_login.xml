<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/login"
        android:scaleType="centerCrop" />

    <Space
        android:layout_width="50sp"
        android:layout_height="50sp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/space" />

    <EditText
        android:layout_width="wrap_content"
        android:padding="10sp"
        android:background="@drawable/background_square_shadow"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Usuario"
        android:ems="10"
        android:id="@+id/editText2"
        android:layout_below="@+id/space"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10sp"
        android:layout_marginTop="5sp"
        android:hint="Contraseña"
        android:background="@drawable/background_square_shadow"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/editText3"
        android:layout_below="@+id/editText2"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ENTRAR"
        android:background="@color/colorAccent"
        android:layout_marginTop="5sp"
        android:textStyle="bold"
        android:id="@+id/entrarBtn"
        android:layout_below="@+id/editText3"
        android:layout_alignLeft="@+id/editText3"
        android:layout_alignStart="@+id/editText3"
        android:layout_alignRight="@+id/editText3"
        android:layout_alignEnd="@+id/editText3" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="REGISTRARME"
        android:id="@+id/textView2"
        android:layout_marginTop="5sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_below="@+id/entrarBtn"
        android:layout_alignLeft="@+id/entrarBtn"
        android:layout_alignStart="@+id/entrarBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="CONTRASEÑA"
        android:layout_marginTop="5sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:id="@+id/textView3"
        android:layout_alignBottom="@+id/textView2"
        android:layout_alignRight="@+id/entrarBtn"
        android:layout_alignEnd="@+id/entrarBtn" />

    <ImageView
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:background="@drawable/background_square_shadow"
        android:id="@+id/imageView2"
        android:src="@mipmap/ic_launcher"
        android:layout_above="@+id/space"
        android:layout_centerHorizontal="true" />

</RelativeLayout>